<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <org.caojun.widget.AutofitTextView
                android:id="@+id/tvMoves"
                style="@style/Calculator_TextView"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="32sp"
                android:text="TextView" />

            <org.caojun.widget.AutofitTextView
                android:id="@+id/tvGoal"
                style="@style/Calculator_TextView"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="32sp"
                android:text="TextView" />
        </LinearLayout>

        <org.caojun.widget.AutofitTextView
            android:id="@+id/tvNumber"
            style="@style/Calculator_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right|center"
            android:text="TextView" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <org.caojun.widget.AutofitLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn00"
                    style="@style/Calculator_Button"
                    android:text="Button" />
            </org.caojun.widget.AutofitLayout>

            <org.caojun.widget.AutofitLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn01"
                    style="@style/Calculator_Button"
                    android:text="Button" />
            </org.caojun.widget.AutofitLayout>

            <org.caojun.widget.AutofitLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn02"
                    style="@style/Calculator_Button"
                    android:text="Button" />
            </org.caojun.widget.AutofitLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <org.caojun.widget.AutofitLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn10"
                    style="@style/Calculator_Button"
                    android:text="Button" />
            </org.caojun.widget.AutofitLayout>

            <org.caojun.widget.AutofitLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn11"
                    style="@style/Calculator_Button"
                    android:text="Button" />
            </org.caojun.widget.AutofitLayout>

            <org.caojun.widget.AutofitLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn12"
                    style="@style/Calculator_Button"
                    android:text="Button" />
            </org.caojun.widget.AutofitLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <org.caojun.widget.AutofitLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn20"
                    style="@style/Calculator_Button"
                    android:text="Button" />
            </org.caojun.widget.AutofitLayout>

            <org.caojun.widget.AutofitLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn21"
                    style="@style/Calculator_Button"
                    android:text="Button" />
            </org.caojun.widget.AutofitLayout>

            <org.caojun.widget.AutofitLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn22"
                    style="@style/Calculator_Button"
                    android:text="Button" />
            </org.caojun.widget.AutofitLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>
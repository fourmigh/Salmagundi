<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.caojun.ttclass">

    <meta-data android:name="android.support.PARENT_ACTIVITY"
        android:value=".activity.IClassListActivity"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.IClassListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ScheduleDetailActivity"
            android:label="@string/schedule"/>
        <activity android:name=".activity.TeacherDetailActivity"
            android:label="@string/teacher"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activity.SchoolDetailActivity"
            android:label="@string/institute"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activity.IClassDetailActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activity.BillListActivity"
            android:label="@string/payment"/>
        <activity android:name=".activity.SchoolListActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar"/>
        <activity android:name=".activity.ScheduleListActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar"/>
        <activity android:name=".activity.SignListActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar"/>
        <activity android:name=".activity.NoteDetailActivity"
            android:label="@string/note"/>
    </application>

</manifest>